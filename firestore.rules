rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーコレクション: 自分のデータのみ読み書き可能
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ペアリングコレクション
    match /pairings/{pairingId} {
      // 読み込み: 自分のデータのみ (userIdフィールドが自分)
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // 書き込み: ログイン必須 (アプリロジック上、相手のデータも書く必要があるので広めに許可)
      allow write: if request.auth != null;
    }
    
    // 友達リクエスト
    match /friendRequests/{requestId} {
      // 読み込み: 送信者か受信者ならOK
      allow read: if request.auth != null && (
        resource.data.fromUserId == request.auth.uid || 
        resource.data.toUserId == request.auth.uid
      );
      // 書き込み: ログイン必須
      allow write: if request.auth != null;
    }
    
    // 招待リンク
    match /inviteLinks/{linkId} {
      // 読み込み: 知ってる人は誰でもOK（ログイン必須）
      allow read: if request.auth != null;
      // 作成: 自分のリンクのみ
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // 更新・削除: 自分のリンクのみ
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // 暗号化手紙（旧）: 認証済みユーザーのみ
    match /encryptedLetters/{letterId} {
      allow read, write: if request.auth != null;
    }
    
    // 手紙コレクション: 送信者または受信者のみ読み書き可能
    match /letters/{letterId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
        (resource.data.senderId == request.auth.uid || 
         resource.data.recipientId == request.auth.uid);
      allow update: if request.auth != null && 
        (resource.data.senderId == request.auth.uid || 
         resource.data.recipientId == request.auth.uid);
      allow delete: if request.auth != null && 
        (resource.data.senderId == request.auth.uid ||
         // 受信者のブロックによる削除も許可
         resource.data.recipientId == request.auth.uid);
    }
    
    // 通報: 認証済みユーザーのみ作成可能
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if false; // 運営のみ
    }
    
    // 統計: グローバルカウンター（開発者PC LLM使用回数）
    match /stats/{docId} {
      // 読み込み: 誰でもOK（カウンター表示用）
      allow read: if true;
      // 書き込み: 認証済みユーザーのみ（incrementに使う）
      allow write: if request.auth != null;
    }
  }
}